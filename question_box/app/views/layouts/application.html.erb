<!DOCTYPE html>
<html>
  <head>
    <title>QuestionBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_user %>
        <div class="text-right my-4">
          Logged in as <strong><%= current_user %></strong>  |  
          <%= link_to 'View my Questions', users_path, class:'btn btn-sm'%>  |  
          <%= link_to "Log out", logout_path, class:'btn btn-sm' %>
        </div>
      <% else %>
        <div class="text-right my-4">
          <%= link_to "Log in", new_login_path, class:'btn btn-sm' %>  |  
          <%= link_to "Register New User", new_user_path, class:'btn btn-sm' %>
        </div>
      <% end %>

      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: flash_classes(name) %>
      <% end %>


    <%= yield %>
  </body>
</html>
