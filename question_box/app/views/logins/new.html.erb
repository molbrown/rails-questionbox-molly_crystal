<h1 class='my-3' style='font-size: 1.8rem;'>Log in to your Account:</h1>

<%= form_tag login_url do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <button class='btn text-light', style='background-color: #137547;' type="submit">Log in</button>
<% end %>